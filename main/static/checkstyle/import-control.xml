<import-control pkg="com.eriklievaart.toolkit">
	<allow pkg="java" />
	<allow pkg="com.eriklievaart.toolkit" />
	<allow pkg="org.apache.commons.lang3" />

	<subpackage name="apps">
		<allow pkg="org.apache.commons.io" />
		<allow pkg="javax.swing" />
	</subpackage>

	<subpackage name="io">
		<allow pkg="org.apache.commons.io" />
	</subpackage>
		
	<subpackage name="swing">
		<allow pkg="javax.swing" />
	</subpackage>

	<subpackage name="script">
		<allow pkg="javax.script" />
	</subpackage>

	<subpackage name="test">
		<allow pkg="org.mockito" />
	</subpackage>

	<subpackage name="xml">
		<allow pkg="javax.xml" />
		<allow pkg="org.xml" />
	</subpackage>

</import-control>